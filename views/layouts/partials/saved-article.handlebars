<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="card-text">{{summary}}</p>
                <a href="{{link}}" target="_blank" class="card-link">{{link}}</a>
                <button type="button" class="btn btn-success delete" data-id={{_id}}>Delete</button>
                <button type="button" class="btn btn-success note" data-id={{_id}}>Add a Note</button>
            </div>
        </div>
    </div>
</div>